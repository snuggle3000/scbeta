<!DOCTYPE html>
<html>
<head>
  <title>SnuggleCloud</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<ul>	
		<% if logged_in? %>
			<li><%= link_to "Log Out", logout_path %>
		<% else %>
			<li><%= link_to "Log In", login_path %>
			<li><%= link_to "Sign Up", signup_path %>
		<% end %>
	</ul>	
<%= yield %>

</body>
</html>
